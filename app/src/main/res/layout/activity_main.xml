<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/jugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="288dp"
        android:layout_height="327dp"
        android:layout_marginBottom="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/transparente" />

    <ImageButton
        android:id="@+id/pos1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="25dp"

        android:contentDescription="@string/boton_descripcion"
        android:src="@drawable/limpio"
        app:layout_constraintEnd_toStartOf="@+id/pos2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jugar" />

    <ImageButton
        android:id="@+id/pos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="33dp"
        android:contentDescription="@string/boton_descripcion"

        android:src="@drawable/limpio"
        app:layout_constraintEnd_toStartOf="@+id/pos3"
        app:layout_constraintTop_toBottomOf="@+id/jugar" />


    <ImageButton
        android:id="@+id/pos3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="72dp"

        android:contentDescription="@string/boton_descripcion"
        android:src="@drawable/limpio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jugar" />

    <ImageButton
        android:id="@+id/pos4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="27dp"

        android:contentDescription="@string/boton_descripcion"
        android:src="@drawable/limpio"
        app:layout_constraintEnd_toStartOf="@+id/pos5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pos1" />

    <ImageButton
        android:id="@+id/pos5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/boton_descripcion"

        android:src="@drawable/limpio"
        app:layout_constraintEnd_toStartOf="@+id/pos6"
        app:layout_constraintTop_toBottomOf="@+id/pos2" />

    <ImageButton
        android:id="@+id/pos6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="75dp"
        android:contentDescription="@string/boton_descripcion"

        android:src="@drawable/limpio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pos3" />

    <ImageButton
        android:id="@+id/pos7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"

        android:layout_marginTop="32dp"
        android:contentDescription="@string/boton_descripcion"
        android:src="@drawable/limpio"
        app:layout_constraintEnd_toStartOf="@+id/pos8"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pos4" />

    <ImageButton
        android:id="@+id/pos8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/boton_descripcion"
        android:src="@drawable/limpio"
        app:layout_constraintEnd_toStartOf="@+id/pos9"
        app:layout_constraintTop_toBottomOf="@+id/pos5" />

    <ImageButton
        android:id="@+id/pos9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"
        android:layout_marginEnd="76dp"
        android:contentDescription="@string/boton_descripcion"
        android:src="@drawable/limpio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pos6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />



</androidx.constraintlayout.widget.ConstraintLayout>